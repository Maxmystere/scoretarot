<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.pssoftware.scoretarot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="fr.pssoftware.scoretarot.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.pssoftware.scoretarot.TableDonneActivity"
            android:label="@string/title_activity_table_donne" >
        </activity>
        <activity
            android:name="fr.pssoftware.scoretarot.GraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        <activity
            android:name="fr.pssoftware.scoretarot.PartieListActivity"
            android:label="@string/title_partie_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.pssoftware.scoretarot.PartieDetailActivity"
            android:label="@string/title_partie_detail"
            android:parentActivityName=".PartieListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PartieListActivity" />
        </activity>
    </application>

</manifest>